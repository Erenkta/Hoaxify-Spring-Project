spring:
  jpa:
    properties:
      javax:
        persistence:
          validation:
            mode: none
  data:
    web:
      pageable:
        page-parameter: currentPage
        size-parameter: pageSize #Custom değişkenler verdik 
        default-page-size: 10
        max-page-size: 100

  profiles:
    active:
      - dev
  servlet:
    multipart:
      enabled: true
      max-file-size: 10MB
        
---
spring:
  profiles:
     production
hoaxify:
  upload-path: storage-production
---
